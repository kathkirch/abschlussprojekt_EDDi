<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Einstellungen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_einstellungen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/einstellungen"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:padding="4dp"
            android:textAlignment="center"
            android:background="@drawable/title_style"/>

        <TextView
            android:id="@+id/textView_Nutzerprofil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nutzerprofil"
            android:textSize="20sp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_einstellungen_vname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vorname"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

            <EditText
                android:id="@+id/editText_einstellungen_vname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:hint="@string/vname"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_einstellungen_nname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nachname"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

            <EditText
                android:id="@+id/editText_einstellungen_nname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/nname"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_einstellungen_gebDat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/geburtsdatum"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

            <EditText
                android:id="@+id/editText_einstellungen_gebDat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/gebdat"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_einstellungen_groesse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/groesse"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

            <EditText
                android:id="@+id/editText_einstellungen_groesse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/groesse_hint"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_einstellungen_gewicht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gewicht"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

            <EditText
                android:id="@+id/editText_einstellungen_gewicht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/gewicht_hint"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_einstellungen_nutzername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nutzername_einstellunge"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/TextView_einstellungen_nutzername_ausgewaehlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nutzername_hint"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_einstellungen_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pin_einstellungen"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/TextView_einstellungen_pw_ausgewaehlt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pin_hint"
                android:textSize="18sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/informationen"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/verantwortliche"
            android:textSize="18sp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>

</ScrollView>