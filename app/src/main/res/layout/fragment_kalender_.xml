<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.Kalender_Fragment"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        app:datePicker="true"
        app:headerColor="@color/calender_header"
        app:selectionColor="@color/calender_select"
        />

    <Space
        android:id="@+id/space01"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eintraege_des_tages"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/title_style"
        android:textSize="20sp"
        android:padding="4dp">
    </TextView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:text="@string/eintraege_vom_tag"
        android:gravity="start"
        android:keyboardNavigationCluster="true">
    </EditText>


</LinearLayout>