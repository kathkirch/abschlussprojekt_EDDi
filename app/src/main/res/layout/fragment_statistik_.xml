<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    tools:context=".ui.main.Statistik_Fragment"
    android:id="@+id/fragment_statistik">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_statistik"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/title_style"
            android:padding="4dp"
            android:text="@string/Statistik"
            android:textSize="22sp">

        </TextView>

        <com.jjoe64.graphview.GraphView
            android:id ="@+id/graph"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width ="match_parent"
            android:layout_height ="400dp" />

        <TextView
            android:id="@+id/textView_Legende"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/title_style"
            android:padding="4dp"
            android:text="@string/legende"
            android:textSize="20sp">
        </TextView>

        <TextView
            android:id="@+id/textView_legende_beschreibung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="@string/achsenbeschreibung">
        </TextView>



    </LinearLayout>






</FrameLayout>